<mah:MetroWindow
	x:Class="SeriesTracker.Windows.WindowLoggingIn"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
	xmlns:ViewModels="clr-namespace:SeriesTracker.ViewModels"
	Height="100" Width="300"
	MouseDown="Window_MouseDown"
	WindowStartupLocation="CenterScreen"
	Style="{StaticResource MetroWindowNoTitle}"
	Loaded="Window_Loaded">
	<mah:MetroWindow.DataContext>
		<ViewModels:ViewLoggingInViewModel/>
	</mah:MetroWindow.DataContext>
	<Grid>
		<Label x:Name="lbl_text"  Content="{Binding LoginText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</mah:MetroWindow>
