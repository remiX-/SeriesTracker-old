<UserControl
	x:Class="SeriesTracker.Dialogs.AboutDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	Width="400" Height="300"
	Style="{StaticResource STUserControl}">
	<DockPanel Margin="16">
		<Button DockPanel.Dock="Bottom"
				IsCancel="True"
				Style="{DynamicResource MaterialDesignFlatButton}"
				Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
				Content="Close"
				HorizontalAlignment="Right" />

		<Label DockPanel.Dock="Top" Margin="0 0 0 10" Style="{StaticResource lbl-subheading}" Content="{Binding ProductName}" HorizontalAlignment="Center" />
		<Label DockPanel.Dock="Top" Style="{StaticResource lbl-default-top-center}" Content="{Binding Version}" />
	</DockPanel>
</UserControl>