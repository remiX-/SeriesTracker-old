<Controls:MetroWindow
		x:Class="SeriesTracker.WindowLoggingIn"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
		xmlns:ViewModels="clr-namespace:SeriesTracker.ViewModels"
		Height="100" Width="300"
		MouseDown="Window_MouseDown"
		WindowStartupLocation="CenterScreen"
		Style="{StaticResource MetroWindowNoTitle}"
	Loaded="Window_Loaded">
	<Controls:MetroWindow.DataContext>
		<ViewModels:ViewLoggingInViewModel/>
	</Controls:MetroWindow.DataContext>
	<Grid>
		<Label x:Name="lbl_text"  Content="{Binding LoginText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</Controls:MetroWindow>
